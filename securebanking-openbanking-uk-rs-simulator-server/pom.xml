<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.forgerock.securebanking.uk</groupId>
    <artifactId>securebanking-openbanking-uk-rs-simulator-server</artifactId>
    <packaging>jar</packaging>
    <version>1.1.5-SNAPSHOT</version>
    <name>securebanking-openbanking-uk-rs-simulator-server</name>
    <description>A UK Open Banking RS simulator for the Secure Banking Accelerator Toolkit</description>
    <url>
        https://github.com/SecureBankingAccessToolkit/securebanking-openbanking-uk-rs/securebanking-openbanking-uk-rs-simulator-server
    </url>

    <organization>
        <name>ForgeRock</name>
        <url>http://www.forgerock.org</url>
    </organization>

    <parent>
        <groupId>com.forgerock.securebanking.uk</groupId>
        <artifactId>securebanking-openbanking-uk-rs</artifactId>
        <version>1.1.5-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <properties>
        <!-- property to run individualy the module with no license issues -->
        <legal.path.header>../legal/LICENSE-HEADER.txt</legal.path.header>
    </properties>

    <dependencies>
        <!-- ForgeRock dependencies -->
        <dependency>
            <groupId>com.forgerock.securebanking.common</groupId>
            <artifactId>securebanking-common-cors</artifactId>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-rs-obie-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.clients</groupId>
            <artifactId>securebanking-forgerock-rs-platform-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-rs-backoffice-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-rs-admin-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-forgerock-datamodel</artifactId>
        </dependency>
        <dependency>
            <groupId>com.forgerock.securebanking.uk</groupId>
            <artifactId>securebanking-openbanking-uk-error</artifactId>
